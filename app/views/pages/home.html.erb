<h1>Home Page</h1>

<%= image_tag 'ninja.jpg' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <a href="#" class="btn btn-success btn-lg btn-block" role="button">Cash on Hand<br>Balance: $<%= @cash.balance %></a>
    <a href="#" class="btn btn-info btn-lg btn-block" role="button">Bank Account<br>Balance: $<%= @bank.balance %></a>
    <a href="#" class="btn btn-warning btn-lg btn-block" role="button">Bills due this month<br>Total</a>
    <a href="#" class="btn btn-danger btn-lg btn-block" role="button">Credit Card Debt<br>Balance</a>
  </div>
</div><br>

<p>
  <%= @cash.balance %>
</p>

<p>
  <% @accounts.each do |account| %>
    <tr>
      <td><%= account.name %></td>
      <td><%= account.balance %></td>
      <td><%= account.account_type %></td>
      <td><%= link_to 'Show', account %></td>
      <td><%= link_to 'Edit', edit_account_path(account) %></td>
      <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</p>